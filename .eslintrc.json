{
	"env": {
		"browser": true,
		"es6": true,
		"amd": true,
		"node": true,
		"jest": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"array-bracket-spacing": [ "error", "always" ],
		"eol-last": [ "error", "always" ],
		"indent": [ "error", 2 ],
		"no-trailing-spaces": "error",
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ]
	}
}